.row
  .col.s12.m12
    .card-panel.blue-grey
      %h3.white-text Журнал выдачи
      %table.bordered
        %thead
          %tr
            %th Id
            %th Document
            %th User
            %th Expired at
            %th Closed
            %th
            %th
        %tbody
          -@entries.each do |entry|
            %tr
              %td=entry.id
              %td=entry.document.code
              %td=entry.employee.name
              %td=entry.expired_at
              %td=entry.closed
              %td=link_to "Edit", edit_entry_path(entry)
              %td=link_to "Delete", entry_path(entry), method: :delete
